<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="nfdi4health-pr-mds-organization" />
  <url value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-pr-mds-organization" />
  <version value="0.9" />
  <name value="NFDI4Health_PR_MDS_Organization" />
  <title value="NFDI4Health PR MDS Organization" />
  <status value="draft" />
  <publisher value="NFDI4Health" />
  <contact>
    <telecom>
      <system value="url" />
      <value value="https://www.nfdi4health.de" />
    </telecom>
  </contact>
  <description value="Resource covering metadata of an organization." />
  <fhirVersion value="4.0.1" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Organization" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Organization" />
  <derivation value="constraint" />
  <differential>
    <element id="Organization">
      <path value="Organization" />
      <short value="Details about organisation/institution/group/etc." />
      <definition value="Group of items providing information about group(s) of persons, institution(s) or organisation(s) contributing to the resource." />
      <comment value="Group of items applicable to organisational/group names. | Organisational name can be used to denote a research group or an institution." />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.2 Resource.roles.organisational" />
      </mapping>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.6 Resource.roles.affiliation" />
      </mapping>
    </element>
    <element id="Organization.extension">
      <path value="Organization.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="0" />
    </element>
    <element id="Organization.extension:fundingID">
      <path value="Organization.extension" />
      <sliceName value="fundingID" />
      <min value="0" />
      <type>
        <code value="Extension" />
        <profile value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-ex-mds-fundingID" />
      </type>
      <isModifier value="false" />
    </element>
    <element id="Organization.extension:fundingID.value[x]">
      <path value="Organization.extension.value[x]" />
      <type>
        <code value="string" />
      </type>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.2.2 Resource.roles.organisational.fundingId" />
      </mapping>
    </element>
    <element id="Organization.identifier">
      <path value="Organization.identifier" />
      <short value="Digital identifier(s) of the organisation" />
      <definition value="Group of items providing information about identifiers of the organisation." />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.6.4 Resource.roles.affiliation.identifiers" />
      </mapping>
    </element>
    <element id="Organization.identifier.type">
      <path value="Organization.identifier.type" />
      <short value="Identifier scheme" />
      <definition value="Type of the identifier scheme." />
      <comment value="Which type of identifer is reported?" />
      <min value="1" />
      <example>
        <label value="Identifier type" />
        <valueCodeableConcept>
          <text value="ROR" />
        </valueCodeableConcept>
      </example>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.6.4.2 Resource.roles.affiliation.identifiers.scheme" />
      </mapping>
    </element>
    <element id="Organization.identifier.type.coding">
      <path value="Organization.identifier.type.coding" />
      <min value="1" />
      <max value="1" />
    </element>
    <element id="Organization.identifier.value">
      <path value="Organization.identifier.value" />
      <short value="Identifier" />
      <definition value="Digital identifier of the organisation according to a definite scheme." />
      <comment value="Preferably, provide an identifier from ROR (https://ror.org/search)." />
      <min value="1" />
      <example>
        <label value="ROR Identifier" />
        <valueString value="0259fwx54" />
      </example>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.6.4.1 Resource.roles.affiliation.identifiers.identifier" />
      </mapping>
    </element>
    <element id="Organization.type">
      <path value="Organization.type" />
      <short value="Type of the role" />
      <definition value="Type of the role an organisation, institution or group fulllfils. For example, this can be a sponsor of the study or a group of authors of the document." />
    </element>
    <element id="Organization.name">
      <path value="Organization.name" />
      <short value="Name of the organisation/institution/group" />
      <definition value="For &quot;1.11.2.3 Resource.roles.organisational.name&quot;: Name of the organisation, institution or group. / For &quot;1.11.6.1 Resource.roles.affiliation&quot;: Name of the organisation associated with the role." />
      <comment value="If you are have already entered the name of the organistion in the property &quot;Name of the organisation/institution/group&quot;, please repeat it here." />
      <min value="1" />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.2.3 Resource.roles.organisational.name" />
      </mapping>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.6.1 Resource.roles.affiliation.name" />
      </mapping>
    </element>
    <element id="Organization.telecom">
      <path value="Organization.telecom" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <max value="1" />
    </element>
    <element id="Organization.telecom:email">
      <path value="Organization.telecom" />
      <sliceName value="email" />
      <short value="Email address" />
      <definition value="Email address of the person, group of persons or institution/organisation." />
      <max value="1" />
      <fixedContactPoint>
        <system value="email" />
      </fixedContactPoint>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.4 Resource.roles.email" />
      </mapping>
    </element>
    <element id="Organization.telecom:email.system">
      <path value="Organization.telecom.system" />
      <min value="1" />
      <fixedCode value="email" />
    </element>
    <element id="Organization.telecom:email.value">
      <path value="Organization.telecom.value" />
      <short value="Email address" />
      <definition value="Email address of the  person, group of persons or institution/organisation." />
      <min value="1" />
    </element>
    <element id="Organization.telecom:phone">
      <path value="Organization.telecom" />
      <sliceName value="phone" />
      <short value="Phone number" />
      <definition value="Phone number of the  person, group of persons or institution/organisation." />
      <comment value="Please, use the International ITU-T E.164-number structure for geographic areas, e.g. +49 (0)153 1112233." />
      <max value="1" />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.5 Resource.roles.phone" />
      </mapping>
    </element>
    <element id="Organization.telecom:phone.system">
      <path value="Organization.telecom.system" />
      <min value="1" />
      <fixedCode value="phone" />
    </element>
    <element id="Organization.telecom:phone.value">
      <path value="Organization.telecom.value" />
      <short value="Phone number" />
      <definition value="Phone number of the  person, group of persons or institution/organisation." />
      <comment value="Please, use the International ITU-T E.164-number structure for geographic areas, e.g. +49 (0)153 1112233." />
      <min value="1" />
      <example>
        <label value="Phone" />
        <valueString value="+49 (0)153 1112233" />
      </example>
    </element>
    <element id="Organization.telecom:webpage">
      <path value="Organization.telecom" />
      <sliceName value="webpage" />
      <short value="Web page of the organisation" />
      <definition value="Web page of the organisation associated with the role." />
      <max value="1" />
      <fixedContactPoint>
        <system value="url" />
      </fixedContactPoint>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.1.5.3 Resource.roles.affiliation.webpage" />
      </mapping>
    </element>
    <element id="Organization.telecom:webpage.system">
      <path value="Organization.telecom.system" />
      <min value="1" />
      <fixedCode value="url" />
    </element>
    <element id="Organization.telecom:webpage.value">
      <path value="Organization.telecom.value" />
      <short value="Web page of the organisation" />
      <definition value="Web page of the organisation associated with the role." />
      <min value="1" />
    </element>
    <element id="Organization.address">
      <path value="Organization.address" />
      <short value="Address of the organisation" />
      <definition value="Address of the organisation associated with the role." />
      <max value="1" />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.6.2 Resource.roles.affiliation.address" />
      </mapping>
    </element>
  </differential>
</StructureDefinition>