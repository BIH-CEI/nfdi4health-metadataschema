      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.18.10 Resource.provenance.lastUpdatePostedDate" />
      </mapping>
    </element>
    <element id="Provenance.agent">
      <path value="Provenance.agent" />
      <short value="User who submitted, published, updated or verified the resource." />
      <definition value="An actor taking a role in an activity for which it can be assigned some degree of responsibility for the activity taking place." />
      <mapping>
        <identity value="NFDI4Health" />
