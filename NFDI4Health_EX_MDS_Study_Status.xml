<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
    <id value="nfdi4health-ex-mds-study-status"/>
    <url value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-ex-mds-study-status"/>
    <version value="0.9"/>
    <name value="NFDI4Health_EX_MDS_Study_Status"/>
    <title value="NFDI4Health EX MDS Study Status"/>
    <status value="draft"/>
    <publisher value="NFDI4Health"/>
    <contact>
        <telecom>
            <system value="url"/>
            <value value="https://www.nfdi4health.de"/>
        </telecom>
    </contact>
    <description value="Extension informing about the status of a study."/>
    <fhirVersion value="4.0.1"/>
    <mapping>
        <identity value="rim"/>
        <uri value="http://hl7.org/v3"/>
        <name value="RIM Mapping"/>
    </mapping>
    <mapping>
        <identity value="NFDI4Health"/>
        <name value="NFDI4Health to FHIR Mapping"/>
    </mapping>
    <kind value="complex-type"/>
    <abstract value="false"/>
    <context>
        <type value="element"/>
        <expression value="ResearchStudy"/>
    </context>
    <type value="Extension"/>
    <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Extension"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Extension">
            <path value="Extension"/>
            <short value="Status"/>
            <definition value="Group of items providing information about different status of a study (overall status, status of an interventional study, recruitment status, enrolling by invitation status)."/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Extension.extension">
            <path value="Extension.extension"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:overall-status">
            <path value="Extension.extension"/>
            <sliceName value="overall-status"/>
            <short value="Overall study status"/>
            <definition value="Overall status of the study."/>
            <comment value="If at least one study site in a multicenter study has the status 'Ongoing', then the overall status for the study must be 'Ongoing'. | Select one value from the list."/>
            <min value="1"/>
            <max value="1"/>
            <mapping>
                <identity value="NFDI4Health"/>
                <map value="1.17.7 Resource.studyDesign.status"/>
            </mapping>
        </element>
        <element id="Extension.extension:overall-status.extension">
            <path value="Extension.extension.extension"/>
            <max value="0"/>
        </element>
        <element id="Extension.extension:overall-status.url">
            <path value="Extension.extension.url"/>
            <fixedUri value="overall-status"/>
        </element>
        <element id="Extension.extension:overall-status.value[x]">
            <path value="Extension.extension.value[x]"/>
            <min value="1"/>
            <type>
                <code value="Coding"/>
            </type>
            <binding>
                <strength value="required"/>
                <description value="Value set defining codes to specify the overall status of a study."/>
                <valueSet value="https://www.nfdi4health.de/fhir/metadataschema/ValueSet/nfdi4health-vs-mds-study-overall-status-umls-local"/>
            </binding>
        </element>
        <element id="Extension.extension:overall-status.value[x].system">
            <path value="Extension.extension.value[x].system"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:overall-status.value[x].code">
            <path value="Extension.extension.value[x].code"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:status-when-intervention">
            <path value="Extension.extension"/>
            <sliceName value="status-when-intervention"/>
            <short value="Do participants receive an intervention?"/>
            <definition value="Specification whether study participants receive intervention or have completed it but are still being followed according to the primary objective of the study."/>
            <comment value="Select one value from the list."/>
            <min value="0"/>
            <max value="1"/>
            <mapping>
                <identity value="NFDI4Health"/>
                <map value="1.17.8 Resource.studyDesign.statusWhenIntervention"/>
            </mapping>
        </element>
        <element id="Extension.extension:status-when-intervention.extension">
            <path value="Extension.extension.extension"/>
            <max value="0"/>
        </element>
        <element id="Extension.extension:status-when-intervention.url">
            <path value="Extension.extension.url"/>
            <fixedUri value="status-when-intervention"/>
        </element>
        <element id="Extension.extension:status-when-intervention.value[x]">
            <path value="Extension.extension.value[x]"/>
            <min value="1"/>
            <type>
                <code value="Coding"/>
            </type>
            <binding>
                <strength value="required"/>
                <description value="Value set defining codes to specify the status of a study when it was halted."/>
                <valueSet value="https://www.nfdi4health.de/fhir/metadataschema/ValueSet/nfdi4health-vs-mds-study-status-when-intervention-local"/>
            </binding>
        </element>
        <element id="Extension.extension:status-when-intervention.value[x].system">
            <path value="Extension.extension.value[x].system"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:status-when-intervention.value[x].code">
            <path value="Extension.extension.value[x].code"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:recruitment-status-register">
            <path value="Extension.extension"/>
            <sliceName value="recruitment-status-register"/>
            <short value="Overall recruitment status of the study from the register of clinical trials"/>
            <definition value="Overall recruitment status of the study as indicated in the corresponding register of clinical trials."/>
            <comment value="The item applies only to studies automatically uploaded from the registers of clinical trials."/>
            <min value="0"/>
            <max value="1"/>
            <mapping>
                <identity value="NFDI4Health"/>
                <map value="1.17.12 Resource.studyDesign.recruitmentStatusRegister"/>
            </mapping>
        </element>
        <element id="Extension.extension:recruitment-status-register.extension">
            <path value="Extension.extension.extension"/>
            <max value="0"/>
        </element>
        <element id="Extension.extension:recruitment-status-register.url">
            <path value="Extension.extension.url"/>
            <fixedUri value="recruitment-status-register"/>
        </element>
        <element id="Extension.extension:recruitment-status-register.value[x]">
            <path value="Extension.extension.value[x]"/>
            <min value="1"/>
            <type>
                <code value="Coding"/>
            </type>
            <binding>
                <strength value="required"/>
                <description value="Value set defining codes to specify the study recruitment status (from a register) in a ResearchStudy resource."/>
                <valueSet value="https://www.nfdi4health.de/fhir/metadataschema/ValueSet/nfdi4health-vs-mds-study-recruitment-status-register-umls-local"/>
            </binding>
        </element>
        <element id="Extension.extension:recruitment-status-register.value[x].system">
            <path value="Extension.extension.value[x].system"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:recruitment-status-register.value[x].code">
            <path value="Extension.extension.value[x].code"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:status-enrolling-by-invitation">
            <path value="Extension.extension"/>
            <sliceName value="status-enrolling-by-invitation"/>
            <short value="Are participants enrolled by invitation?"/>
            <definition value="Specification whether study participants have been selected from a predetermined population or enrolled by invitation."/>
            <min value="0"/>
            <max value="1"/>
            <mapping>
                <identity value="NFDI4Health"/>
                <map value="1.17.11 Resource.studyDesign.statusEnrollingByInvitation"/>
            </mapping>
        </element>
        <element id="Extension.extension:status-enrolling-by-invitation.extension">
            <path value="Extension.extension.extension"/>
            <max value="0"/>
        </element>
        <element id="Extension.extension:status-enrolling-by-invitation.url">
            <path value="Extension.extension.url"/>
            <fixedUri value="status-enrolling-by-invitation"/>
        </element>
        <element id="Extension.extension:status-enrolling-by-invitation.value[x]">
            <path value="Extension.extension.value[x]"/>
            <min value="1"/>
            <type>
                <code value="Coding"/>
            </type>
            <binding>
                <strength value="required"/>
                <description value="Value set used to respond to questions that can be answered Yes, No, or Not Applicable."/>
                <valueSet value="https://www.nfdi4health.de/fhir/metadataschema/ValueSet/nfdi4health-vs-mds-yes-no-not-applicable-snomedct"/>
            </binding>
        </element>
        <element id="Extension.extension:status-enrolling-by-invitation.value[x].system">
            <path value="Extension.extension.value[x].system"/>
            <min value="1"/>
        </element>
        <element id="Extension.extension:status-enrolling-by-invitation.value[x].code">
            <path value="Extension.extension.value[x].code"/>
            <min value="1"/>
        </element>
        <element id="Extension.url">
            <path value="Extension.url"/>
            <fixedUri value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-ex-mds-study-status"/>
        </element>
        <element id="Extension.value[x]">
            <path value="Extension.value[x]"/>
            <max value="0"/>
        </element>
    </differential>
</StructureDefinition>