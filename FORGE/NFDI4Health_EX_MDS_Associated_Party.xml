<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="nfdi4health-ex-mds-associated-party" />
  <url value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-ex-mds-associated-party" />
  <version value="0.9" />
  <name value="NFDI4Health_EX_MDS_Associated_Party" />
  <title value="NFDI4Health EX MDS Associated Party" />
  <status value="draft" />
  <publisher value="NFDI4Health" />
  <contact>
    <telecom>
      <system value="url" />
      <value value="https://www.nfdi4health.de" />
    </telecom>
  </contact>
  <description value="Group of items providing information about person(s), group(s) of persons or institution(s)/organisation(s) contributing to the resource." />
  <fhirVersion value="4.0.1" />
  <kind value="complex-type" />
  <abstract value="false" />
  <context>
    <type value="element" />
    <expression value="ResearchStudy" />
  </context>
  <context>
    <type value="element" />
    <expression value="DocumentReference" />
  </context>
  <context>
    <type value="element" />
    <expression value="Questionnaire" />
  </context>
  <type value="Extension" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Extension" />
  <derivation value="constraint" />
  <differential>
    <element id="Extension">
      <path value="Extension" />
      <short value="Role(s)" />
      <definition value="Group of items providing information about person(s), group(s) of persons or institution(s)/organisation(s) contributing to the resource." />
      <comment value="For each resource, there may be multiple roles, but at least one person, group of persons or institution/organisation must be specified.&#xD;&#xA;Based on ResearchStudy.associatedParty (R5)." />
      <min value="1" />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11 Resource.roles" />
      </mapping>
    </element>
    <element id="Extension.extension">
      <path value="Extension.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="2" />
    </element>
    <element id="Extension.extension:party">
      <path value="Extension.extension" />
      <sliceName value="party" />
      <short value="Individual or organisation associated with the [RESOURCE]" />
      <definition value="Individual or organisation associated with the [RESOURCE] (use practitionerRole to specify their organisation)." />
      <min value="1" />
    </element>
    <element id="Extension.extension:party.url">
      <path value="Extension.extension.url" />
      <fixedUri value="party" />
    </element>
    <element id="Extension.extension:party.value[x]">
      <path value="Extension.extension.value[x]" />
      <min value="1" />
      <type>
        <code value="Reference" />
        <profile value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-pr-mds-practitioner" />
        <profile value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-pr-mds-practitioner-role" />
        <profile value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-pr-mds-organization" />
      </type>
    </element>
    <element id="Extension.extension:role-personal">
      <path value="Extension.extension" />
      <sliceName value="role-personal" />
      <short value="Type of the role" />
      <definition value="Type of the role a person fulllfils. For example, this can be a principal investigator of a study or an author of a document." />
      <comment value="Short input help: Which role does the person fulllfil? Select one value from the list." />
      <min value="0" />
      <max value="1" />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.3.1 Resource.roles.personal.type" />
      </mapping>
    </element>
    <element id="Extension.extension:role-personal.url">
      <path value="Extension.extension.url" />
      <fixedUri value="role-personal" />
    </element>
    <element id="Extension.extension:role-personal.value[x]">
      <path value="Extension.extension.value[x]" />
      <short value="Role type" />
      <definition value="Type of the role a person fulllfils, e.g. a principal investigator of a study or an author of a document?" />
      <comment value="Select one value from the list." />
      <min value="1" />
      <type>
        <code value="Coding" />
      </type>
      <binding>
        <strength value="required" />
        <description value="Value set defining codes for personal roles." />
        <valueSet value="https://www.nfdi4health.de/fhir/metadataschema/ValueSet/nfdi4health-vs-mds-personal-roles-nci-umls-local" />
      </binding>
    </element>
    <element id="Extension.extension:role-personal.value[x].system">
      <path value="Extension.extension.value[x].system" />
      <min value="1" />
    </element>
    <element id="Extension.extension:role-personal.value[x].code">
      <path value="Extension.extension.value[x].code" />
      <min value="1" />
    </element>
    <element id="Extension.extension:role-organisational">
      <path value="Extension.extension" />
      <sliceName value="role-organisational" />
      <short value="Type of the role" />
      <definition value="Type of the role an organisation, institution or group fulllfils. For example, this can be a sponsor of the study or a group of authors of the document." />
      <comment value="Short input help: Which role does the organisation/institution/group/etc. fulllfil? Select one value from the list." />
      <min value="0" />
      <max value="1" />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.2.1 Resource.roles.organisational.type" />
      </mapping>
    </element>
    <element id="Extension.extension:role-organisational.url">
      <path value="Extension.extension.url" />
      <fixedUri value="role-organisational" />
    </element>
    <element id="Extension.extension:role-organisational.value[x]">
      <path value="Extension.extension.value[x]" />
      <short value="Type of the role" />
      <definition value="Type of the role an organisation, institution or group fulllfils. For example, this can be a sponsor of the study or a group of authors of the document." />
      <comment value="Which role does the organisation/institution/group/etc. fulllfil? Select one value from the list." />
      <min value="1" />
      <type>
        <code value="Coding" />
      </type>
      <binding>
        <strength value="required" />
        <description value="Value set defining codes for organisational roles." />
        <valueSet value="https://www.nfdi4health.de/fhir/metadataschema/ValueSet/nfdi4health-vs-mds-organisational-roles-nci-local" />
      </binding>
    </element>
    <element id="Extension.extension:role-organisational.value[x].system">
      <path value="Extension.extension.value[x].system" />
      <min value="1" />
    </element>
    <element id="Extension.extension:role-organisational.value[x].code">
      <path value="Extension.extension.value[x].code" />
      <min value="1" />
    </element>
    <element id="Extension.extension:name-type">
      <path value="Extension.extension" />
      <sliceName value="name-type" />
      <short value="Type of the name" />
      <definition value="Personal or organisational/group type of the name." />
      <min value="1" />
      <max value="1" />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.1 Resource.roles.nameType" />
      </mapping>
    </element>
    <element id="Extension.extension:name-type.url">
      <path value="Extension.extension.url" />
      <fixedUri value="name-type" />
    </element>
    <element id="Extension.extension:name-type.value[x]">
      <path value="Extension.extension.value[x]" />
      <short value="Type of the name" />
      <definition value="Personal or organisational/group type of the name." />
      <min value="1" />
      <type>
        <code value="Coding" />
      </type>
      <binding>
        <strength value="required" />
        <description value="Value set defining codes to specify role types." />
        <valueSet value="https://www.nfdi4health.de/fhir/metadataschema/ValueSet/nfdi4health-vs-mds-role-name-type-umls" />
      </binding>
    </element>
    <element id="Extension.url">
      <path value="Extension.url" />
      <fixedUri value="https://www.nfdi4health.de/fhir/metadataschema/StructureDefinition/nfdi4health-ex-mds-associated-party" />
    </element>
    <element id="Extension.value[x]">
      <path value="Extension.value[x]" />
      <max value="0" />
    </element>
  </differential>
</StructureDefinition>