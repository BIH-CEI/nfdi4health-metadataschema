    <element id="PractitionerRole.telecom">
      <path value="PractitionerRole.telecom" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <description value="Email and phone" />
        <rules value="open" />
      </slicing>
      <definition value="Email and phone of the  person, group of persons or institution/organisation." />
      <max value="1" />
    </element>
    <element id="PractitionerRole.telecom:email">
      <path value="PractitionerRole.telecom" />
      <sliceName value="email" />
      <short value="Email address" />
      <definition value="Email address of the person or group of persons" />
      <max value="1" />
      <fixedContactPoint>
        <system value="email" />
        <use value="work" />
      </fixedContactPoint>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.4 Resource.roles.email" />
      </mapping>
    </element>
    <element id="PractitionerRole.telecom:email.system">
      <path value="PractitionerRole.telecom.system" />
      <min value="1" />
      <fixedCode value="email" />
