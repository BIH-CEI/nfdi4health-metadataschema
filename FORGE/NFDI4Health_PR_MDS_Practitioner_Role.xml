      <max value="1" />
      <fixedContactPoint>
        <system value="phone" />
        <use value="work" />
      </fixedContactPoint>
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.11.5 Resource.roles.phone" />
      </mapping>
    </element>
    <element id="PractitionerRole.telecom:phone.system">
      <path value="PractitionerRole.telecom.system" />
      <min value="1" />
      <fixedCode value="phone" />
    </element>
    <element id="PractitionerRole.telecom:phone.value">
      <path value="PractitionerRole.telecom.value" />
      <min value="1" />
      <example>
        <label value="Phone number" />
        <valueString value="+49 (0)153 1112233" />
      </example>
