      {
        "id": "Extension.extension:bodyPart.extension",
        "path": "Extension.extension.extension",
        "max": "0"
      },
      {
        "id": "Extension.extension:bodyPart.url",
        "path": "Extension.extension.url",
        "fixedUri": "bodyPart"
      },
      {
        "id": "Extension.extension:bodyPart.value[x]",
