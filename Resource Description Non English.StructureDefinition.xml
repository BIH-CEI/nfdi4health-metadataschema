      <path value="Extension.extension.value[x]" />
      <short value="Non English text" />
      <definition value="Short plain text summary of the resource other than in English." />
      <min value="1" />
      <type>
        <code value="markdown" />
      </type>
      <type>
        <code value="string" />
      </type>
