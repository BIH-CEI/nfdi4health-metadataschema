        <identity value="NFDI4Health" />
        <map value="1.6.1 Resource.resource_descriptions_non_english" />
      </mapping>
    </element>
    <element id="Extension.extension:text.url">
      <path value="Extension.extension.url" />
      <fixedUri value="text" />
    </element>
