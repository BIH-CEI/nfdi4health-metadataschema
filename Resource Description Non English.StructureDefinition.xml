  <differential>
    <element id="Extension">
      <path value="Extension" />
      <short value="Non English Description(s)" />
      <definition value="Group of items with  description(s) of the resource written not in English." />
      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.6 Resource.resource_descriptions_non_english" />
      </mapping>
    </element>
    <element id="Extension.extension">
      <path value="Extension.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
