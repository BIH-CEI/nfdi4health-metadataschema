      <mapping>
        <identity value="NFDI4Health" />
        <map value="1.6.2 Resource.resource_descriptions_non_english" />
      </mapping>
    </element>
    <element id="Extension.extension:language.url">
      <path value="Extension.extension.url" />
      <fixedUri value="language" />
    </element>
    <element id="Extension.extension:language.value[x]">
      <path value="Extension.extension.value[x]" />
      <min value="1" />
      <type>
        <code value="code" />
      </type>
      <fixedCode value="de, fr, es, other" />
    </element>
    <element id="Extension.url">
      <path value="Extension.url" />
      <fixedUri value="https://example.org/fhir/StructureDefinition/ResourceDescriptionNonEnglish" />
    </element>
    <element id="Extension.value[x]">
      <path value="Extension.value[x]" />
